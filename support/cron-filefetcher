# Keep config updated
*/5 * * * * configupdater.py --url=$CONFIG_UPDATER_URL --user=$USER --passwd=$PASSWD $CONFIG_UPDATER_CONFIG

# Run daily just after midnight
10 0 * * * filefetcher.py --no-backfill > $FF_LOG_DIR/filefetcher_`date -u "+%Y%m%d:%H"` 2>&1

# cleanup logs
0 0 * * * find $FF_LOG_DIR -name 'filefetcher_*' -mtime +14 -exec rm {} \;
